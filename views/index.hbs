<div class="d-flex flex-column align-items-center">
  <h2 class="mb-3"> Punch Shortener</h2>
  <img src="https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png" alt=""
    width="100px">
</div>

<form action="./" method="POST">
  <div class="input-group pt-5 mb-3">
    <input type="url" class="form-control mr-2" name="originalUrl" placeholder="貼上長網址" required>
    <button class="btn btn-outline-success shorten" type="submit">縮網址</button>
  </div>
</form>


<div class="d-flex flex-column align-items-center">
  {{!-- 輸入相同網址時產生一樣的縮址 --}}
  {{#if originalUrl}}
  <div class="row align-items-center mr-2">
    <h6 class="col-auto mr-1">成功 ! 請使用這個連結 <a class="col-auto" href="{{ originalUrl }}" target="_blank"
        id="copyShortUrl">{{ shortUrl }}</a> </h6>
    <button class="btn btn-success" type="button" data-clipboard-target="#copyShortUrl" id="copyBtn">Copy URL</button>
  </div>

  <p class="form-text text-secondary mt-1">長網址：{{ originalUrl }}</p>
  {{/if}}
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>

<script>
  let clipBoard = new ClipboardJS('#copyBtn')
</script>